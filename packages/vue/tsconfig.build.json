{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./temp",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "lib",
    "noUncheckedIndexedAccess": false
  },
  "vueCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
