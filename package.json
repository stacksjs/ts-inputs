{
  "name": "ts-inputs",
  "type": "module",
  "version": "0.1.7",
  "description": "Modern & lightweight input masking.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-inputs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-inputs.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-inputs/issues"
  },
  "keywords": [
    "typescript",
    "starter",
    "kit",
    "bun",
    "package",
    "vue",
    "components"
  ],
  "exports": {
    ".": {
      "types": "./packages/ts-inputs/dist/index.d.ts",
      "import": "./packages/ts-inputs/dist/index.js",
      "require": "./packages/ts-inputs/dist/index.cjs"
    }
  },
  "module": "./packages/ts-inputs/dist/index.js",
  "types": "./packages/ts-inputs/dist/index.d.ts",
  "files": [
    "README.md",
    "packages/ts-inputs/dist"
  ],
  "scripts": {
    "build": "bun --filter './packages/ts-inputs' build && bun --filter './packages/vue' build",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit && bun --bun tsc --noEmit -p packages/vue/src/components/datetime-picker/tsconfig.json",
    "lint": "bunx --bun pickier lint .",
    "lint:fix": "bunx --bun pickier lint . --fix",
    "format": "bunx --bun pickier format .",
    "format:fix": "bunx --bun pickier format . --write",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun --bun run changelog:generate && bunx --bun bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs"
  },
  "devDependencies": {
    "@stacksjs/docs": "^0.70.23",
    "@types/clean-css": "^4.2.11",
    "@types/google.maps": "^3.58.1",
    "better-dx": "^0.2.6"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "git-hooks": {
    "pre-commit": {
      "stagedLint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun pickier lint --fix"
      },
      "autoRestage": true
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  },
  "workspaces": [
    "packages/*"
  ]
}
